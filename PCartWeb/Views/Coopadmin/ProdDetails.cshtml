@model PCartWeb.Models.EditProductModel

@{
    ViewBag.Title = "ProdDetails";
}

<head>
    <style>
        body {
            margin-top: 20px;
        }

        .panel.panel-default {
            border-top-width: 3px;
        }

        .panel {
            border: 0;
            border-radius: 4px;
            margin-bottom: 16px;
        }

        .thumb96 {
            width: 500px !important;
            height: 500px !important;
        }

        .thumb48 {
            width: 48px !important;
            height: 48px !important;
        }

        .center {
            margin-left: 10%;
        }
    </style>
</head>

<div class="container center mt-5">
    <div class="container bootstrap snippets bootdey">
        <div class="row ng-scope">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <div class="pv-lg">
                            <img src="@Url.Content("~/Images/"+Model.ProductDetailsModel.Product_image)" width="320" height="320" />
                        </div>
                    </div>
                </div>
                <div class="panel panel-default hidden-xs hidden-sm" style="padding: 20px; box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);">
                    <div class="form-group">
                        <label class="col-sm-5 control-label" for="inputContact8">Date Created</label>
                        <div class="col-sm-11">
                            <input class="form-control" id="inputContact8" type="text" value="@Model.ProductDetailsModel.Prod_Created_at" disabled />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputContact8">Date Updated</label>
                        <div class="col-sm-11">
                            <input class="form-control" id="inputContact8" type="text" value="@Model.ProductDetailsModel.Prod_Updated_at" disabled>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="padding: 40px; box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19); margin-bottom: 20px;">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="h4 text-center">Product Details</div>
                        <div class="row">
                            <div class="col">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label class="h6 col-sm-2 control-label" for="inputContact1">Name</label>
                                        <div class="col-sm-12">
                                            <input class="form-control" id="inputContact3" type="text" value="@Model.ProductDetailsModel.Product_Name" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="h6 col-sm-2 control-label" for="inputContact2">Description</label>
                                        <div class="col-sm-12">
                                            <textarea class="form-control" rows="5" id="comment" placeholder="@Model.ProductDetailsModel.Product_desc" disabled></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="inputContact3">Manufacturer</label>
                                        <div class="col-sm-12">
                                            <input class="form-control" id="inputContact3" type="text" value="@Model.ProductManufacturer.Manufacturer" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="inputContact4">Qty</label>
                                        <div class="col-sm-12">
                                            <input class="form-control" id="inputContact4" type="text" value="@Model.ProductDetailsModel.Product_qty" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="inputContact5">Cost</label>
                                        <div class="col-sm-12">
                                            <input class="form-control" id="inputContact5" type="text" value="@Model.ProductCost.Cost" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="inputContact6">Price</label>
                                        <div class="col-sm-12">
                                            <input class="form-control" id="inputContact5" type="text" value="@Model.PriceTable.Price" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="inputContact7">Category</label>
                                        <div class="col-sm-12">
                                            <input class="form-control" id="inputContact7" type="text" value="@Model.ProductDetailsModel.Categoryname" disabled>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" onclick="location.href = '@Url.Action("EditProduct", "Coopadmin", new { id = Model.ProductDetailsModel.Id })'">Edit</button>
                <button class="btn btn-primary" onclick="location.href = '@Url.Action("ViewListProduct", "Coopadmin", new { id = Model.ProductDetailsModel.Id })'">Back</button>
            </div>
        </div>
    </div>
</div>
