@model IEnumerable<PCartWeb.Models.CategoryViewModel>

@{
    ViewBag.Title = "List of Categories";
}

<h2>@ViewBag.Title</h2>
<head>
    <link href="~/Content/css/customStyle.css" rel="stylesheet" />
    <style>
        th {
            color: white;
        }
    </style>
</head>

<div class="custom-container">
    <p>
        @Html.ActionLink("Create New", "AddCat")
    </p>
    <div class="table-responsive table-hover">
        <table class="table">
            <tr class="bg-dark">
                <th>
                    @Html.DisplayNameFor(model => model.Cat_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cat_desc)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cat_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cat_desc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditCategory", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteCategory", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
