@{
    ViewBag.Title = "Reset password confirmation";
}

<head>
    <link rel="stylesheet" href="~/Content/css/customStyle.css" />
</head>

<div class="container custom-container">
    <div class="row">
        <div class="col-md-6 mx-auto custom-form-1">
            <h3>Password Changed!</h3>
            <div class="form-group text-center" style="margin-top: 3%;">
                <p>
                    Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>
            </div>
        </div>
    </div>
</div>
