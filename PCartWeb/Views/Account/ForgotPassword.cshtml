@model PCartWeb.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<head>
    <script src="https://kit.fontawesome.com/f95a563cc2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/css/customStyle.css" />
</head>
<style>
    .fa {
        color: #001FA1;
    }
</style>

<div class="container custom-container">
    <div class="row">
        <div class="col-md-5 custom-form-1 mx-auto">
            <a href="javascript:void(0);" id="backLink"><i class="fas fa-arrow-left"></i></a>
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h3>Reset Password</h3>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                </div>
                <div class="form-group text-center">
                    <input id="btnShowModal" type="submit" class="btnSubmit" value="Email Link" />
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).on('click', '#backLink', function () {
        history.go(-1);
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
