@model PCartWeb.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<head>
    <link rel="stylesheet" href="~/Content/css/customStyle.css">
</head>

<div class="container custom-container">
    <div class="row">
        <div class="col-md-6 custom-form-1 mx-auto">
            <section>
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <h3 style="margin-bottom: 7%;">Resest Password</h3>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confrim Password", @class = "form-control" })
                    </div>
                    <div class="form-group text-center" style="margin-top: 7%;">
                        <input type="submit" class="btnSubmit" value="Reset" />
                    </div>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
