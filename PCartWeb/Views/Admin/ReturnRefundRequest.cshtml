@model IEnumerable<PCartWeb.Models.ReturnRefund>

@{
    ViewBag.Title = "ReturnRefundRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Return/Refund Request</h2>

<table class="table">
    <tr>
        <th>
            Order ID
        </th>
        <th>
            User ID
        </th>
        <th>
            COOP ID
        </th>
        <th>
            Type
        </th>
        <th>
            Status
        </th>
        <th>
            Reason
        </th>
        <th>
            Refund Amount
        </th>
        <th>
            Date Accepted
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserOrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoopId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefundAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAccepted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
