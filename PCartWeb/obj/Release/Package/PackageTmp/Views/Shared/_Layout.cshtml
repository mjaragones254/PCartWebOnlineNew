<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="~/Scripts/jquery-3.5.1.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top" style="background-image: linear-gradient(15deg, #001FA1 0%, #ffffff 100%);">
        <a href="/Home/Home" class="navbar-brand"> <img src="~/Images/PCartLogo.png" alt="Company logo" width="60" height="50" /></a>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("PCart", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
        }
        else
        {
            @Html.ActionLink("PCart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        }
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            @if (User.IsInRole("Admin"))
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Commision Rate", "CreateCommissionRate", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Coop Requests", "ViewPendingCoop", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Complaints", "Complaints", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reports", "Reports", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Notifications", "Notifications", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            }
            else if (User.IsInRole("Member") || User.IsInRole("Non-member"))
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            }
            else if (User.IsInRole("Coop Admin"))
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Coopadmin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Management
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="~/Coopadmin/ViewListCategory">Category</a>
                            <a class="dropdown-item" href="~/Coopadmin/ViewListProduct">Products</a>
                            <a class="dropdown-item" href="~/Coopadmin/ViewMemberList">Members</a>
                            <a class="dropdown-item" href="~/Coopadmin/ViewDriverList">Delivery Riders</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Promos
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="~/Coopadmin/ViewListDiscount">Discounts</a>
                            <a class="dropdown-item" href="~/Coopadmin/ViewVoucherList">Vouchers</a>
                        </div>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Orders", "ViewOrderList", "Coopadmin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Member Products", "MemberProducts", "Coopadmin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Complaints", "Complaints", "Coopadmin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reports", "Reports", "Coopadmin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Notifications", "Notifications", "Coopadmin", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            }

            @Html.Partial("_LoginPartial")

        </div>
    </nav>
   
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team4Onwards</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
